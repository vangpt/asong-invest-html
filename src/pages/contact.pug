          i.icon.icon-phone
          .ml-3 Điện thoại: 0123456789
        .flex.items-center.mb-3
          i.icon.icon-mail
          .ml-3 Email: example@gmail.com
        .flex.items-center.mb-3
          i.icon.icon-web
          .ml-3 Website công ty: eportal.vn
