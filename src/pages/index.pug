          .col-span-3.border-l.group(class='first:border-0 md:col-span-2 lg:col-span-1')(
            class=index === 3 && 'md:border-0 lg:border-l'
          )(
            class=index % 2 === 0 && 'border-l-0 md:border-l'
          )
            .flex.flex-col.items-center.cursor-pointer.py-8.px-4.h-full.c-transition(
              class='hover:-translate-y-3'
            )
              img(src=`assets/images/${item.image}`, width='62px')
              .text-center.mt-4.text-blue-100= item.title

  .bg-cover.bg-center.bg-no-repeat.relative.w-full(
    style='background-image: url(assets/images/bg-completed-project.png)',
    class='md:h-[600px]'
  )
    .container.py-4
      h2.text-2xl.font-bold.text-center.text-pink-100(class='md:pt-48') OUR CASES
      h3.text-3xl.text-center.font-bold.mt-4.mb-14 Completed Projects
      .relative
        section.grid.grid-cols-1.gap-5.left-0.right-0.z-10(class='md:grid-cols-3 md:gap-10 md:absolute')(
          data-aos='fade-right'
        )
          - var articleType2List = [{ title: 'Extra benefit through Invest', image: 'assets/images/completed-project01.png', desc: 'From banking and insurance to wealth management and on securities' }, { title: 'Extra benefit through Invest', image: 'assets/images/completed-project01.png',desc: 'From banking and insurance to wealth management and on securities' }, { title: 'Extra benefit through Invest', image: 'assets/images/completed-project01.png',desc: 'From banking and insurance to wealth management and on securities' }, ]
          each item in articleType2List
            include /components/article-type2
            +articleType2(item.title, item.image, item.desc)

  .bg-contain.bg-center.bg-no-repeat.relative.w-full(
    style='background-image: url(assets/images/map-earth.png)',
    class='h-[400px] md:h-[1000px]'
  )
    .container.py-4
      h2.text-2xl.font-bold.text-center.text-pink-100(class='md:pt-48') TRUST US
      h3.text-3xl.text-center.font-bold.mt-4.mb-14 Entire World Trust us

  .bg-cover.bg-center.bg-no-repeat.relative.w-full.overflow-hidden(
    style='background-image: url(assets/images/bg-statistical.png)'
