mixin breadcrumb(title, image, linkBack)
  section.bg-cover.bg-center.bg-no-repeat.relative(
    class='pt-[26%]',
    style='background-image: linear-gradient(180deg, rgba(6, 128, 67, 0.5) 0%, rgba(6, 128, 67, 0.25) 100%), url(assets/images/' + image + ')'
  )
    if (linkBack)
      a.c-title-2-breadcrumb(href=linkBack, class='min-w-[220px]')
        i.icon.icon-chevron-left.icon-12
        span.ml-2= title

    else
      .c-title-breadcrumb= title
